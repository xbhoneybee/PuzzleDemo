<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main2back"
    android:weightSum="7">

    <ImageView
        android:id="@+id/dif_imageView"
        android:layout_width="match_parent"
        android:layout_margin="25dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="7"
        android:src="@drawable/image4" />

        <Button
            android:id="@+id/dif_button_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:text="菜鸟:  3  X  3"
            android:textSize="25dp"/>
        <Button
            android:id="@+id/dif_button_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:text="简单:  4  X  4"
            android:textSize="25dp"/>
        <Button
            android:id="@+id/dif_button_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="#00000000"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:text="练手:  5  X  5"
            android:textSize="25dp"
            />




</LinearLayout>